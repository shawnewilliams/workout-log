<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <title>Lift Log</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

     <!-- Bootstrap 4 BETA CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/css/styles.css">

  </head>
  <body>
    <nav class="navbar navbar-expand-md navbar-dark">
      <a class="navbar-brand" href="/">Workout Log</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link active" href="/workouts">Workouts <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/history">History</a>
          </li>
        </ul>
        <!-- THIS IS HIDDEN FOR MD AND LARGER SCREENS -->
        <form class="d-md-none">
          <input class="form-group form-control" type="text" placeholder="username" aria-label="Username">
          <input class="form-group form-control" type="password" placeholder="password" aria-label="password">
          <button class="btn btn-block btn-outline-light btn-sm mb-3" type="submit">Login</button>
        </form>

        <!-- LOGIN MODAL TRIGGER BUTTON -->
        <button type="button" class="btn mr-2 btn-outline-light col-md-2 btn-sm d-none d-md-block" data-toggle="modal" data-target="#loginModel">
          Login
        </button>
        
        <!-- REGISTER BUTTON ALWAYS DISPLAYED -->
        <a class="btn btn-outline-light btn-sm col-md-2 btn-block" href="#">
          Register
        </a>
      
      </div>
    </nav>

    <!-- LOGIN MODAL -->
    <div class="modal fade" id="loginModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h3 class="modal-title" id="exampleModalLabel">Login</h3>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form>
              <input class="form-group form-control" type="text" placeholder="username" aria-label="Username">
              <input class="form-group form-control" type="password" placeholder="password" aria-label="password">
              <button class="btn btn-block btn-outline-dark btn-sm mb-3" type="submit">Login</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- END LOGIN MODAL -->

    <div class="container">
        <div class="row">
            <div class="col">
                <h1><%= workout.name %></h1>
            </div>
        </div>
    </div>
    
    <!--WORKOUT LOOP-->
    <% workout.exercise.forEach(function(exercise){ %>
        <div class="container">  
          <div class="row">
            <div class="col">
              <a data-toggle="collapse" href="#collapse<%= exercise._id %>" aria-expanded="false" aria-controls="collapse<%= exercise._id %>">
                      <h1><%= exercise.name %></h1>
                  </a>
              <div id="collapse<%= exercise._id %>" class="show">
                <table class="table table-inverse table-striped table-bordered">
                  <thead>
                    <tr>
                      <th>Set</th>
                      <th>Previous</th>
                      <th>Weight</th>
                      <th>Reps</th>
                    </tr>
                  </thead>
                  <tbody>
                  <% for(var i = 1; i <= parseInt(exercise.sets); i++){ %>
                    <tr>
                      <th scope="row"><%= i %></th>
                      <td>100 lb x 10</td>
                      <td></td>
                      <td></td>
                    </tr>
                  <% } %>
                  
                </table>
                <button class="btn btn-block btn btn-outline-light">Add Set</button>
              </div>
            </div>
          </div>
        </div>
    <% }); %>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/popper.js/dist/umd/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/js/liftlog.js"></script>

    <script type="text/javascript" src="js/liftlog.js"></script>
  </body>
</html>